{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "public/*": ["public/*"],
      // "data/*": ["data/*"],
      // "core/*": ["src/core/*"], // locale 같은 i18n
      "hooks/*": ["src/hooks/*"],
      "config/*": ["src/config/*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"],
      "styles/*": ["src/styles/*"],
      "pages/*": ["src/pages/*"],
      "section/*": ["src/section/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
